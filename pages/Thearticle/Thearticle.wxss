@import "../../wxParse/wxParse.wxss";
.pages{
  width: 100%;
  border-top: 1px solid #eee;
  font-family: PingFangSC-Regular;
}
.headline{
  margin: 20px 15px 20px 15px;
  text-align:left;
  font-size: 25px;
  line-height: 38px;
  font-weight: 500;
  color: #323232;
}
.author{
  margin: 0px 15px 4px 15px;
  text-align: left;
  font-size: 14px;
  color: #466B9C;
  font-weight: 500;
}
.time{
  margin: 0px 15px 4px 15px;
  text-align: left;
  font-size: 14px;
  color: #8E8E8E;
}
.container1{
  margin: 4px 15px 4px 15px;
}
.wxParse-p .wxParse-inline{
  align-items: left;
  text-align: left;
  float:left;
  line-height:30px;
  font-size:18px;
}
.wxParse-img {
  width:100%;
  margin-top:10px;
}
.xianshi{
  width: 170px;
  height: 40px;
  position: fixed;
  bottom: 105px;
  background: rgba(0,0,0,0.75);
  border-radius: 2px; 
  left: 50%;
  opacity: 0;
  margin-left: -80px;
  font-size: 16px;
  color: #FFFFFF;
  line-height: 40px;
}
.xianshi image{
  display: block;
  float: left;
  width: 20px;
  height: 20px;
  margin-top: 10px;
  margin-left: 5px;
}
.yincang{
  animation-iteration-count:1;
  animation:mymove 4s ;
  -webkit-animation:mymove 4s ; /*Safari and Chrome*/
}

@keyframes mymove
{
from {opacity: 1}
to {opacity: 0}
}

@-webkit-keyframes mymove /*Safari and Chrome*/
{
from {opacity: 1}
to {opacity: 0}
}
.kongbai{
  width: 100%;
  height: 48px;
}
.returnto{
  width: 100%;
  height: 48px;
  line-height: 48px;
  position: fixed;
  z-index: 10;
  bottom: 0;
  background-color: #ffffff;
}
.returnto view{
  font-size: 18px;
  float: right;
  width: 60%;
  background-color:  #4ABD49;
} 
.returnto .fenshare image{
  width: 23px;
  height: 19px;
  display: inline-block;
  vertical-align: top;
  margin-top: 15px;
}
.returnto .homepage{
  font-size: 18px;
  color: #323232;
  float: left;
  width: 40%;
  background-color:  #ffffff;
}
.returnto .homepage image{
  width: 30px;
  height: 30px;
  display: inline-block;
  vertical-align: top;
  margin-top: 8px;
  margin-right: 5px;
}
.paopao{
  position: fixed;
  width: 60px;
  height: 30px;
  bottom: 20px;
  left: 10%;
  z-index: 100;
  -webkit-transform:translateX(-50%);
  -webkit-animation:dong 1.6s linear 0s infinite alternate;
}
@-webkit-keyframes dong{
  from{
    bottom:35px;
  }
  to{
    bottom: 45px;
  }
}
